---
import Button from "@/components/ui/Button.astro";
import ctaScreenshot from "@/assets/images/cta-screenshot.png";
---

<section class="relative z-[2] px-4 pb-4 bg-brand-800">
  <div class="max-w-[1920px] mx-auto bg-gradient-to-b from-brand-100 to-brand-25 rounded-3xl border border-black/[0.04] py-24 overflow-hidden relative">
    <!-- Background ellipse glow -->
    <div class="absolute inset-0 pointer-events-none overflow-hidden">
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[1800px] h-[400px] rotate-[135deg] bg-white/30 rounded-full blur-[120px]"></div>
    </div>

    <div class="max-w-[1280px] mx-auto px-8 flex flex-col lg:flex-row items-center gap-16 relative">
      <!-- Text -->
      <div class="flex-1 flex flex-col gap-12">
        <div class="flex flex-col gap-8">
          <h2 class="font-display text-4xl lg:text-5xl font-medium leading-[44px] lg:leading-[60px] tracking-[-0.96px] text-text-primary">
            Ready to win more projects?
          </h2>
          <p class="text-lg font-normal leading-7 text-text-secondary">
            See how modern contractors are getting more projects by going from walkthrough to signing contracts in record time with a trained AI team member.
          </p>
        </div>
        <div>
          <Button variant="primary" size="lg">Request a demo</Button>
        </div>
      </div>

      <!-- Screen mockup -->
      <div class="flex-1 h-[512px] relative hidden lg:block">
        <div class="absolute top-6 left-0 w-[640px] bg-white border border-black/[0.08] p-1 rounded-[20px] shadow-[0px_10px_13px_0px_rgba(10,13,18,0.08),0px_3px_5px_0px_rgba(10,13,18,0.03),0px_1.5px_1.5px_0px_rgba(10,13,18,0.04)]">
          <div class="bg-white p-1 rounded-[16px] overflow-hidden relative">
            <div class="bg-[#fafafa] border-[1.5px] border-[#e9eaeb] rounded-[14px] overflow-hidden">
              <img
                src={ctaScreenshot.src}
                alt="Handoff app showing AI chat and estimate detail"
                class="w-full h-auto"
              />
            </div>
            <div class="absolute inset-0 pointer-events-none rounded-[inherit] shadow-[inset_0px_0px_5px_2px_rgba(10,13,18,0.08),inset_0px_0px_3px_2px_rgba(10,13,18,0.03)]"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
