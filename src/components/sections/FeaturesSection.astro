---
import TestimonialCard from "./TestimonialCard.astro";
import featureEstimateLocal from "@/assets/icons/feature-estimate.svg";
import featureWinLocal from "@/assets/icons/feature-win.svg";
import featureMoneyLocal from "@/assets/icons/feature-money.svg";

interface Props {
  features?: any;
  testimonial?: any;
}

const { features: featuresProp, testimonial } = Astro.props;

const localFeatures = [
  {
    icon: featureEstimateLocal.src,
    title: "Estimate 10x faster",
    desc: "Turn 3 hour estimates into 20-minute work using real contractor data, not guesswork, with your pricing rules baked right in.",
  },
  {
    icon: featureWinLocal.src,
    title: "Win more projects",
    desc: "Capture walkthrough details automatically and respond same-day. Automated follow-up keeps leads warm so you never lose a good prospect.",
  },
  {
    icon: featureMoneyLocal.src,
    title: "Make more money",
    desc: "Send professional proposals instantly, know exactly when clients view them and keep leads moving with automated follow-up that actually works.",
  },
];

const sectionTitle = featuresProp?.title ?? "Everything you need to win more projects";
const sectionSubtitle = featuresProp?.subtitle ?? "Handoff gives you the tools to respond faster, look more professional, and protect your margins on every job.";
const cards = featuresProp?.cards?.length
  ? featuresProp.cards.map((c: any) => ({
      icon: c.icon?.asset?.url ?? "",
      title: c.title,
      desc: c.description,
    }))
  : localFeatures;
---

<section id="features" class="relative z-[2] px-4 pb-2 bg-transparent transition-colors duration-300">
  <div class="max-w-[1920px] mx-auto bg-white rounded-3xl border border-black/[0.04] py-16 lg:py-24 overflow-hidden flex flex-col gap-12 lg:gap-20">
    <!-- Header -->
    <div class="max-w-[1440px] px-6 lg:px-8 mx-auto w-full flex flex-col gap-5" data-animate="fade-up">
      <h2 class="font-display text-4xl lg:text-5xl font-medium leading-[44px] lg:leading-[60px] tracking-[-0.96px] text-text-primary max-w-4xl">
        {sectionTitle}
      </h2>
      <p class="text-xl font-normal leading-[30px] text-text-tertiary max-w-4xl">
        {sectionSubtitle}
      </p>
    </div>

    <!-- Grid -->
    <div class="max-w-[1440px] px-6 lg:px-8 mx-auto w-full grid grid-cols-1 lg:grid-cols-3 gap-8" data-animate="stagger">
      {cards.map((f: any) => (
        <div class="bg-bg-secondary rounded-xl p-6 flex flex-col gap-16">
          <div class="w-12 h-12 bg-white rounded-md flex items-center justify-center shadow-3xl">
            <img src={f.icon} alt="" class="w-6 h-6" />
          </div>
          <div class="flex flex-col gap-4">
            <h3 class="font-display text-2xl font-medium leading-8 text-text-primary">{f.title}</h3>
            <p class="text-lg font-normal leading-7 text-text-tertiary">{f.desc}</p>
          </div>
        </div>
      ))}
    </div>

    <!-- Testimonial -->
    <TestimonialCard testimonial={testimonial} />
  </div>
</section>
