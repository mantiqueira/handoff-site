---
import Logo from "@/components/ui/Logo.astro";
import AppBadge from "@/components/ui/AppBadge.astro";
import { footerColumns as localFooterColumns } from "@/lib/navigation";

interface Props {
  columns?: { title: string; lightTitle?: boolean; links: { label: string; href: string }[] }[];
}

const { columns } = Astro.props;
const footerColumns = columns?.length ? columns : localFooterColumns;
---

<div class="footer-spacer"></div>
<footer class="fixed bottom-0 left-0 right-0 z-[1] min-h-screen flex flex-col justify-end pt-16 pb-12 bg-brand-800">
  <div class="max-w-[1440px] mx-auto px-8 flex flex-col gap-12">
    <!-- Columns -->
    <div class="flex flex-wrap gap-y-8 lg:gap-y-12 gap-x-8 justify-between" data-animate="fade-up">
      {footerColumns.map((col) => (
        <div class="min-w-24 flex flex-col gap-4 w-[calc(50%-20px)] sm:w-auto">
          <h4 class="text-sm font-semibold leading-5 text-text-on-brand-secondary">
            {col.title}
          </h4>
          <ul class="flex flex-col gap-3">
            {col.links.map((link) => (
              <li>
                <a href={link.href} class="text-base font-medium leading-6 text-text-on-brand-tertiary hover:text-brand-accent transition-colors duration-150">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
      <!-- App column -->
      <div class="flex flex-col gap-4 min-w-[160px]">
        <h4 class="text-sm font-semibold leading-5 text-white">
          Get the app
        </h4>
        <div class="flex flex-col gap-4">
          <AppBadge store="apple" />
          <AppBadge store="google" />
        </div>
      </div>
    </div>

    <!-- Bottom -->
    <div class="flex items-center justify-between flex-wrap gap-6 pt-8 border-t border-border-brand-alt">
      <a href="/" class="flex items-start h-8 pb-2">
        <Logo />
      </a>
      <p class="text-base font-normal leading-6 text-text-on-brand-secondary">
        &copy; 2025 Handoff. All rights reserved.
      </p>
    </div>
  </div>
</footer>
