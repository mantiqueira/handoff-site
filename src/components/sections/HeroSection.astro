---
import Button from "@/components/ui/Button.astro";
import bgPattern from "@/assets/images/background-pattern.png";
import heroGlow from "@/assets/images/hero-glow-line.svg";
import heroScreenshot from "@/assets/images/hero-screenshot.png";
import catalogThumb from "@/assets/images/catalog-thumb.png";

const eyebrow = "Construction-Trained AI for Sales and Lead Intake";
const title = "Never lose money to slow estimates";
const description = "Turn site visits into signed contracts faster than any competitor. Handoff captures every lead and generates complete estimates using trained AI built for construction.";
const ctaText = "See how it works";
---

<section id="hero" class="hero-fixed">
  <!-- Background grid pattern -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1920px] h-[1440px] pointer-events-none z-0">
    <img src={bgPattern.src} alt="" class="w-full h-full block object-contain object-top" />
  </div>

  <!-- Glow line -->
  <div class="absolute -top-[24%] -left-[14%] -right-[14%] -bottom-[24%] pointer-events-none z-[1]">
    <img src={heroGlow.src} alt="" class="w-full h-full block" />
  </div>

  <!-- Content -->
  <div id="hero-container" class="relative z-[1] max-w-[1440px] mx-auto px-8 py-24 flex flex-col lg:flex-row items-center gap-12 lg:gap-16 will-change-[opacity,transform]">
    <div class="flex-1 flex flex-col gap-12" data-animate="fade-up">
      <p class="font-mono text-sm font-semibold leading-6 tracking-[0.56px] uppercase text-text-on-brand-tertiary">
        {eyebrow}
      </p>
      <h1 class="font-display text-4xl sm:text-[44px] lg:text-[60px] font-medium leading-[1.2] lg:leading-[72px] tracking-[-1.2px] text-white">
        {title}
      </h1>
      <p class="text-lg lg:text-xl font-medium leading-[30px] text-text-on-brand-tertiary max-w-[560px] -mt-6">
        {description}
      </p>
      <div>
        <Button variant="secondary-outline" size="lg" class="!bg-white !text-text-secondary !border-border-primary">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="#414651" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            <path d="M10 8L16 12L10 16V8Z" fill="#414651" />
          </svg>
          {ctaText}
        </Button>
      </div>
    </div>

    <!-- Hero image card -->
    <div class="flex-1 relative z-[2]" data-animate="fade-up">
      <div class="relative bg-white/10 backdrop-blur-[4px] rounded-3xl p-8 overflow-hidden">
        <img
          src={heroScreenshot.src}
          alt="Handoff dashboard showing construction estimate"
          class="w-full h-[500px] object-cover object-left-top rounded-xl"
        />
        <!-- Catalog overlay -->
        <div class="absolute bottom-20 left-0 bg-white rounded-lg p-3 shadow-[0_8px_24px_rgba(0,0,0,0.12)] w-[280px] border border-black/[0.06]">
          <div class="flex gap-3">
            <div class="w-12 h-12 rounded-[4px] overflow-hidden shrink-0 bg-[#f5f5f5] border border-[rgba(155,161,161,0.24)]">
              <img src={catalogThumb.src} alt="Product thumbnail" class="w-full h-full object-cover" />
            </div>
            <div class="flex-1 min-w-0 flex flex-col gap-1">
              <p class="text-[11px] font-medium text-text-primary leading-[1.4]">Demo Bathroom Sink</p>
              <p class="text-[9px] font-normal text-[#686b6e] leading-[1.4] catalog-desc">The simple repair fee covers minor pipe boot repairs (material included).</p>
              <div class="flex items-baseline gap-[3px] mt-0.5">
                <span class="text-sm font-semibold text-text-primary">$200.00</span>
                <span class="text-[10px] text-[#686b6e]">/ SF</span>
              </div>
              <div class="flex gap-[3px] mt-0.5">
                <span class="text-[8px] font-medium text-[#686b6e] px-1 py-[1px] border border-[#c0c1c4] rounded-full">Label</span>
                <span class="text-[8px] font-medium text-[#686b6e] px-1 py-[1px] border border-[#c0c1c4] rounded-full">Label</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<div id="hero-spacer" class="hero-spacer"></div>
