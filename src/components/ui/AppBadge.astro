      <path d="M17.72 17.26L13.52 13L1.11 25.48C1.56 25.96 2.28 26.02 3.1 25.56L17.72 17.26Z" fill="#FF3A44" />
      <path d="M17.72 8.74L3.1 0.46C2.28 -0.02 1.56 0.06 1.11 0.52L13.52 13L17.72 8.74Z" fill="#00F076" />
    </svg>
    <div class="flex flex-col">
      <span class="text-[8px] text-white leading-[1.2]">Get it on</span>
      <span class="text-sm font-semibold text-white leading-[1.3]">Google Play</span>
    </div>
  )}
</div>
